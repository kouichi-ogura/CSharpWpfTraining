<Window x:Class="SQLiteForWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLiteForWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="202" Width="294">

    <Grid>
        <StackPanel Margin="10">
            <Label Content="Name" Margin="0,0,217,0" Height="22" FontSize="10"/>
            <TextBox x:Name="NameTextBox" />
            <Label Content="Phone" Margin="0,0,217,0" Height="22" FontSize="10"/>
            <TextBox x:Name="PhoneTextBox" Margin="0,0,-0.667,0"/>
            <Button x:Name="SaveButton"
                    Content="Save"
                    Height="30"
                    Click="SaveButton_Click" Margin="34,5,43.333,0"/>
            <Button x:Name="ReadButton"
                    Content="Read"
                    Height="30"
                    Click="ReadButton_Click" Margin="34,0,43.333,0"/>
        </StackPanel>
    </Grid>
</Window>
